    <style name="kfc_btn_peizha">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">40px</item>
        <item name="android:background">@drawable/shape_rect_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21px</item>
    </style>
</resources>
