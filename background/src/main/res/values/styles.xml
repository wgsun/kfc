<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!-- 菜单上方字体-->
    <style name="background_menutop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">30px</item>
    </style>
    <style name="buy_top">
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="buy_order">
        <item name="android:layout_marginTop">30px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="tv_zhuo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_dao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_serv_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="iv_serv_product">
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">200px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:background">#00ff00</item>
    </style>

    <style name="item_raw">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rect_port_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18px</item>
    </style>
    <style name="item_model_btn">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_rect_port_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="main_raw_tv">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="um_hand_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/um_hand_height</item>
        <item name="android:background">@drawable/shape_rect_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="um_hand_tv">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_rect_port_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21px</item>
    </style>

    <!-- 控件离屏幕两边距离-->
    <style name="setting_margin">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginTop">20px</item>
    </style>

    <style name="csj_slot_hand_sele">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
        <item name="android:background">@drawable/shape_rect_gray_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25px</item>
    </style>

    <style name="base_aisle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_base_text_color_black</item>
        <item name="android:textSize">30px</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="base_Dialog_bocop">
        <item name="android:windowBackground">@color/ui_base_bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

</resources>
